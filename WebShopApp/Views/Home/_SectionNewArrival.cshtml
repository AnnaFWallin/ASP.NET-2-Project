<style>
    .card-body:hover {
        /*display: none;*/
        top: 0;
        max-height: inherit;
    }

    .card {
        background-color: transparent;
    }

        .card > img {
            position: relative;
            z-index: -1;
        }

    .card-body {
        background: #0E153D;
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        max-height: 51px;
    }

        .card-body:hover .extra-info {
            visibility: visible;
        }

        .card-body .extra-info {
            visibility: hidden;
        }

    .custom-row {
        margin: 0;
    }

    .carousel-control-prev {
        justify-content: left;
        margin-left: -40px;
    }

    .carousel-control-next {
        justify-content: right;
        margin-right: -40px;
    }


    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        height: 64px;
        width: 64px;
        outline: #20D3C2;
        background-size: 50%, 50%;
        border-radius: 50%;
        border: 1px solid #20D3C2;
        background-color: #20D3C2;
    }

    .price-text {
        color: #20D3C2;
        font-size: 24px;
    }

    .circle-info {
        height: 60px;
        width: 60px;
        position: absolute;
        top: 15px;
        left: 15px;
        border-radius: 30px;
        font-size: 16px;
        color: #FFF;
    }

    .hot {
        background-color: #FE4545;
    }

    .sales {
        background-color: #64CB83;
    }

    a.disabled {
        pointer-events: none;
    }

        a.disabled > .carousel-control-prev-icon {
            color: grey;
            border: 1px solid grey;
            background-color: grey;
        }

        a.disabled > .carousel-control-next-icon {
            color: grey;
            border: 1px solid grey;
            background-color: grey;
        }

</style>

<div class="container mt-5">
    <h2 class="text-center">NEW <span class="accent-title-color">ARRIVALS</span></h2>
    <p class="text-center">Check out our latest products from top fashion designers</p>
    <div id="newsArrivalCarousel" class="carousel slide" data-ride="carousel">
        @{
            var first = true;
        }
        <div class="carousel-inner">


            @for (var i = 0; i < arrivaltestresult.Count; i = i + 3)
            {
                <div class="carousel-item @(first ? "active" :"")" data-slide-index="@i">
                    <div class="row m-0">

                        @for (var j = 0; j < 3 && i + j < arrivaltestresult.Count; j++)
                        {
                            <div class="col-4 p-0 text-center">
                                <div class="card">
                                    <img src="https://via.placeholder.com/350x350" class="card-img-top" alt="...">


                                    <div class="@(@arrivaltestresult[i+j].DiscountPrice > 0 ? "sales" : "d-none") circle-info hot d-flex flex-column">
                                        @{

                                            int percentagedecrease = (int)(((arrivaltestresult[i + j].Price - arrivaltestresult[i + j].DiscountPrice) / arrivaltestresult[i + j].Price) * 100);
                                        }


                                        <span class="my-auto">@percentagedecrease %</span>
                                    </div>

                                    <div class="@(@arrivaltestresult[i+j].HotSale ? "hot" : "d-none") circle-info hot d-flex flex-column">
                                        <span class="my-auto">HOT</span>
                                    </div>

                                    <div class="card-body text-light text-start d-flex flex-column">
                                        <div class="mt-auto">
                                            <h5>@arrivaltestresult[i+j].Name</h5>

                                            <div class="extra-info">
                                                <p>@arrivaltestresult[i+j].Category</p>
                                                <p class="@(@arrivaltestresult[i+j].DiscountPrice > 0 ? "text-decoration-line-through" :"d-none")">@arrivaltestresult[i+j].Price</p>
                                                <p class="price-text">@(@arrivaltestresult[i+j].DiscountPrice > 0 ? @arrivaltestresult[i+j].DiscountPrice: @arrivaltestresult[i+j].Price)</p>
                                            </div>
                                        </div>


                                    </div>
                                </div>
                            </div>

                            first = false;
                        }
                    </div>
                </div>
            }


        </div>
        <a class="carousel-control-prev" href="#newsArrivalCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#newsArrivalCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


